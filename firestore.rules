rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to categories.
    match /categories/{categoryId=**} {
      allow read, write: if true;
    }

    // Allow public read and write access to questions.
    match /allQuestions/{questionId} {
      allow read, write: if true;
    }

    // Quiz sessions - users can read/write their own quiz sessions
    match /quizSessions/{sessionId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Question Performance - user can only access their own performance data
    match /questionPerformance/{perfId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Review Sessions - user can only access their own review sessions
    match /reviewSessions/{sessionId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }

    // Category Analytics - user can only access their own analytics
    match /categoryAnalytics/{analyticsId} {
      allow read, write: if request.auth != null &&
        (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}
